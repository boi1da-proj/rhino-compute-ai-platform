{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Artifact Index",
  "type": "object",
  "required": ["meta", "artifacts"],
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "project",
        "index_version",
        "generated_at",
        "generator",
        "environments",
        "deployment",
        "localization"
      ],
      "properties": {
        "project": { "type": "string" },
        "index_version": { "type": "integer" },
        "generated_at": { "type": "integer" },
        "generator": { "type": "string" },
        "module_allowlist": {
          "type": "array",
          "items": { "type": "string" }
        },
        "environments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["label", "runtime"],
            "properties": {
              "label": { "type": "string" },
              "runtime": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "deployment": {
          "type": "object",
          "required": ["sandbox_policy", "feature_flags"],
          "properties": {
            "sandbox_policy": { "type": "string" },
            "container_image": { "type": "string" },
            "feature_flags": { "type": "object" }
          },
          "additionalProperties": true
        },
        "localization": {
          "type": "object",
          "required": ["default", "available"],
          "properties": {
            "default": { "type": "string" },
            "available": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "logical_name",
          "type",
          "checksum_sha256",
          "size_bytes",
          "last_modified",
          "platform_tags"
        ],
        "properties": {
          "path": { "type": "string" },
          "logical_name": { "type": "string" },
          "type": { "enum": ["shadow_module", "file"] },
          "module_name": { "type": ["string", "null"] },
          "checksum_sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "last_modified": { "type": "integer", "minimum": 0 },
          "platform_tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
