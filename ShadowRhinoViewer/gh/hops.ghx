// Inputs: List<double> DesignVariables, int Iterations
// Outputs: List<double> BestDesign, string Status
using System; using System.Collections.Generic;
void RunScript(List<double> DesignVariables, int Iterations, ref object BestDesign, ref object Status)
{
  var best = new List<double>();
  for (int i = 0; i < (DesignVariables?.Count ?? 0); i++) best.Add(DesignVariables[i] * 0.1);
  BestDesign = best; Status = $"OK (iters={Iterations}, n={best.Count})";
}
      ]]></Code>
      <Inputs>
        <Input name="DesignVariables" type="System.Double" access="list" />
